<Window x:Class="HelloWPF.Dialogs.SaveFileDialogSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HelloWPF.Dialogs"
        mc:Ignorable="d"
        Title="SaveFileDialogSample" Height="300" Width="300">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="BtnSaveFile" Click="BtnSaveFile_OnClick" Padding="10, 5">Save file</Button>
        </WrapPanel>
        <TextBox Name="TxtEditor" TextWrapping="Wrap" AcceptsReturn="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</Window>