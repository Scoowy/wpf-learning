<Window x:Class="HelloWPF.MiscControls.GroupBoxSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HelloWPF.MiscControls"
        mc:Ignorable="d"
        Title="GroupBoxSample" Height="220" Width="300">
    <Grid>
        <GroupBox Margin="10" Padding="10">

            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/HelloWPF;component/Images/user.png" Width="16" Height="16" Margin="3, 0" />
                    <TextBlock FontWeight="Bold">GroupBox Sample</TextBlock>
                </StackPanel>
            </GroupBox.Header>

            <StackPanel>
                <TextBlock>First name:</TextBlock>
                <TextBox />
                <TextBlock>Last name:</TextBlock>
                <TextBox />
                <Button Margin="0, 20">Add User</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>